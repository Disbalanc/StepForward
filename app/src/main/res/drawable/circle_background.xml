<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Слой для рамки -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- Цвет рамки -->
            <stroke android:color="#FFFFFF" android:width="6dp"/> <!-- Толщина рамки -->
        </shape>
    </item>
    <!-- Слой для изображения -->
    <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- Прозрачный фон для изображения -->
        </shape>
    </item>
</layer-list>